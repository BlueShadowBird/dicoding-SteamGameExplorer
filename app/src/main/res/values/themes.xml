<resources>
    <!-- Base application theme. -->
    <style name="Theme.SteamGameExplorer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Detail">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Detail.Image">
        <item name="android:layout_width">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Detail.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Detail.Text.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Detail.Text.Price">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Detail.Text.FinalPrice">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Detail.Text.Info">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Detail.Text.Info.Value">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Detail.Text.Description">
    </style>
</resources>
